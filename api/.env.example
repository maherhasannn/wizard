# Environment
NODE_ENV=development
PORT=8080

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/wizard?schema=public"

# JWT
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Google Cloud Storage
GCS_BUCKET_NAME=wizard-media
GCS_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json

# Email Service (optional - for password reset, verification)
EMAIL_SERVICE=sendgrid
EMAIL_FROM=noreply@wizard.app
EMAIL_API_KEY=your-email-api-key

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8081

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
